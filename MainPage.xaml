<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardView.MainPage"
             xmlns:local="clr-namespace:BoardView"
             Title="Board View"
             >

    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout>
            <Button Text="Set random HighLight" Clicked="SetRandomHighlight"/>
            <Button Text="Clear HighLight" Clicked="ClearHighlight"/>
        </VerticalStackLayout>
        <Grid Grid.Row="1" BackgroundColor="AliceBlue" >
            <local:Board x:Name="boardmain"/>
        </Grid>
    </Grid>

</ContentPage>
